<div class="pad">

  <% @page_title = "Teams" %>

<h3>My Teams</h3>
  <table>
    <tbody>
      <% @teams.order('name').each do |team| %>
        <tr>
          <td>
            <% if current_user.team_admin?(team) %>
              <%= link_to edit_team_path(team), class: "show-icon" do %>
                <%= image_tag("icons/icon-edit.svg", alt: "edit team") %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to team.name, team %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render "subscribe" %>

  <%= link_to new_team_path do %>
    <h4>Create a new team</h4>
  <% end %>
</div>
