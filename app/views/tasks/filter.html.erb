<div class="margin">
  <p id="notice"><%= notice %></p>

  <% @page_title = "Filter" %>

  <%= form_with url: tasks_url, method: :get do |f| %>

    <%= f.label :team, "Selected team" %>
    <%= f.select :team, current_user.teams.collect { |t| t.name }, include_blank: 'All teams' %>

    <%= f.label :subject, "Selected subject" %>
    <%= f.select :subject, current_user.subjects.collect { |s| s.name }, include_blank: 'All subjects' %>

    <%= f.label :status, "Selected status" %>
    <%= f.select :status, [ [ "TODO" , 1 ] , [ "DOING" , 2 ] , [ "DONE" , 3 ] , [ "All status" , 4 ] ], include_blank: 'Default status (only open)' %>

    <%= f.label :fulltext, "Text filter" %>
    <%= f.text_field :fulltext %>
    <br>
    <%= f.submit "Apply Filter", class: "btn hoverable" %>
    <%= link_to "Clear Filter", "/filter-reset", class: "btn hoverable" %>
  <% end %>
</div>
