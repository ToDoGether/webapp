<p id="notice"><%= notice %></p>

<% @page_title = "Filter" %>

<%= form_with url: '/tasks/', method: :get do |f| %>

  <%= f.label :team_query, "Selected team(s)" %>
  <%= select("team", "name", current_user.teams.collect { |t| [ t.name, t.id ] } ) %>
  
  <%= f.label :subject_query, "Selected subject(s)" %>
  <%= f.select :subject_id, options_for_select(current_user.subjects.collect { |s| [ s.name, s.id ] } ), {prompt: '-Select-', :multiple => true}, { id: :id } %>

<% end %>